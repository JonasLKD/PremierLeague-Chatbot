import pandas as pd


class FileHandler:
    def __init__(self):
        tester = pd.read_csv('bpl 18-19 with head.csv')
        self.date = tester["Date"]
        self.home_team = tester["HomeTeam"]
        self.away_team = tester["AwayTeam"]
        self.fulltime_homegoals = tester["FTHG"]
        self.fulltime_awaygoal = tester["FTAG"]
        self.fulltime_result = tester["FTR"]
        self.referee = tester["Referee"]
        self.home_shots = tester["HS"]
        self.away_shot = tester["AS"]
        self.homeshot_ontarget = tester["HST"]
        self.awayshot_ontarget = tester["AST"]
        self.home_fouls = tester["HF"]
        self.away_fouls = tester["AF"]
        self.home_corners = tester["HC"]
        self.away_corners = tester["AC"]
        self.home_yellowcards = tester["HY"]
        self.away_yellowcards = tester["AY"]
        self.home_redcards = tester["HR"]
        self.away_redcards = tester["AR"]

        self.tester = pd.read_csv('bpl 18-19 with head.csv')

    def show_columns(self):
        # print(self.date + self.home_team + self.away_team + self.fulltime_result)
        print(self.tester.loc[[0]])
        print(self.tester.loc[self.tester['HomeTeam'] == 'Man United'])
        print(self.tester.loc[self.tester['AwayTeam'] == 'Man United'])


f = FileHandler()
f.show_columns()
